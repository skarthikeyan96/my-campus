<!doctype html>
<html>

<head>
    <title>
        My Campus | View All Task
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/style.css' />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,600" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
    crossorigin="anonymous">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
    crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <% include header.ejs %>
        <h4 align="center"> All Tasks </h3>
            <ul class="task-list">
                <% data.forEach(function(post){ %>
                    <li class="task-item">
                        <div class="task-head"><%= post.heading %></div>
                        <div class="task-desc"><%= post.description %></div>
                        <div class="task-date">
                            <%= post.created.getDate() %>-
                            <%= post.created.getMonth() + 1 %>-
                            <%= post.created.getFullYear() %>
                        </div>
                        <a class="task-link" href="/task/view/<%= post._id %>""  >View Task</a>
                    </li>
                    <% }); %>
                </ul>
            </div>

            <!-- Required Scripts -->
            <script src="/js/main.js"></script>
            <script src="/js/task.js"></script>
            <script>
                document.getElementById('newTaskForm').addEventListener('submit', e => createTask(e));
            </script>

        </body>

        </html>
